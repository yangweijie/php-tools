{
    "name": "yangweijie/php-tools",
    "description": "tookit gui wrote by PHP",
    "keywords": ["framework", "console", "cli"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/yangweijie/php-tools/issues",
        "source": "https://github.com/yangweijie/php-tools"
    },
    "authors": [
        {
            "name": "yangweijie",
            "email": "917647288@qq.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "kingbes/libui": "*",
        "monolog/monolog": "^3.9"
    },
    "require-dev": {
        "humbug/box": "^4.6",
        "laravel/pint": "^1.20",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "*",
        "phpacker/phpacker": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Kingbes\\Libui\\SDK\\": "sdk/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "kingbes/libui": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["cli.php"],
    "scripts": {
        "post-install-cmd": [
            "@php scripts/check-libui-dylib.php",
            "@php scripts/patchBase.php"
        ],
        "post-update-cmd": [
            "@php scripts/check-libui-dylib.php",
            "@php scripts/patchBase.php"
        ]
    }
}
